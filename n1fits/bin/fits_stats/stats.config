[acceptable_ranges]

#--------------------------------#
#--- IMAGE TIMING PERFORMANCE ---#
#--------------------------------#

# (1) 
# _________________________________________________________________
# |        Description          |    Default Value    |   Units   |
# -----------------------------------------------------------------
# | Max acceptable difference   |                     |           |
# | between requested and actual|          1          |    sec    |
# | image exposure duration.    |                     |           |
# |_____________________________|_____________________|___________| 

# (1)
dur_range=1

# (2)
# _________________________________________________________________
# |        Description          |    Default Value    |   Units   |
# -----------------------------------------------------------------
# | Max acceptable difference   |                     |           |
# | between requested and actual|          1          |    sec    |
# | image start time.           |                     |           |
# |_____________________________|_____________________|___________| 

# (2)
start_range=1

#--------------------------------#



#--------------------------------#
#---  FINE POINT PERFORMANCE  ---#
#--------------------------------#

# (3), (4) & (5)
# _________________________________________________________________
# |        Description          |    Default Value    |   Units   |
# -----------------------------------------------------------------
# | Max acceptable difference   |          3          |   arcsec  |
# | between requested and actual|_____________________|___________|
# | right ascension (RA),       |          3          |   arcsec  |
# | declination (DEC) and roll  |_____________________|___________|
# | when in FINE POINT mode.    |          15         |   arcsec  |
# |_____________________________|_____________________|___________| 

# (3)
fp_ra_range=3

# (4)
fp_dec_range=3

# (5)
fp_roll_range=15

# (6)
# _________________________________________________________________
# |        Description          |    Default Value    |   Units   |
# -----------------------------------------------------------------
# | Max overall body rate while |                     |           |
# | in FINE POINT mode (note:   |                     |           |
# | requested body rate is 0 in |         0.5         | arcsec/s  |
# | FINE POINT.                 |                     |           |
# |_____________________________|_____________________|___________| 

# (6)
fp_rate_range=0.5

#--------------------------------#



#--------------------------------#
#---  FINE SLEW PERFORMANCE   ---#
#--------------------------------#

# (7), (8) & (9)
# _________________________________________________________________
# |        Description          |    Default Value    |   Units   |
# -----------------------------------------------------------------
# | Max acceptable difference   |          24         |   arcsec  |
# | between requested and actual|_____________________|___________|
# | right ascension (RA),       |          24         |   arcsec  |
# | declination (DEC) and roll  |_____________________|___________|
# | when in FINE SLEW mode.     |          24         |   arcsec  |
# |_____________________________|_____________________|___________| 

# (7)
fs_ra_range=24

# (8)
fs_dec_range=24

# (9)
fs_roll_range=24

# (10)
# _________________________________________________________________
# |        Description          |    Default Value    |   Units   |
# -----------------------------------------------------------------
# | Max acceptable difference   |                     |           |
# | between requested and actual|                     |           |
# | body rate while in          |          10         |  arcsec/s |
# | FINE SLEW mode.             |                     |           |
# |_____________________________|_____________________|___________| 

# (10)
fs_rate_range=10

